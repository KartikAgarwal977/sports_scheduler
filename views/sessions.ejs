<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="views/running.png" type="image/icon type">
    <title>
        <%= title %>
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<script>
    var token = document
        .querySelector("meta[name = 'csrf-token']")
        .getAttribute('content')
    function PlayerDelete(id,) {
        fetch(`/session/${id}`, {
            method: 'delete',
            headers: { "Content-type": "application/json" },
            body: JSON.stringify({
                '_csrf': token
            })
        }).then((res) => {
            if (res.ok) {
                window.location.reload()
            }
        }).catch((err) => console.error(err))
    }
</script>
<body>
    <div class="w-auto ">
        <div class="text-blue-600 border-2 hover:drop-shadow-md rounded p-10">
            <h1 class="text-blue-600 text-2xl underline">
                <%= sportName %> session #<%= sessionId %>
            </h1>
            <% const date = new Date(details.date) 
             const formattedDate = date.toLocaleString('en-US', {
                month: 'short',
                day: 'numeric',
                year: '2-digit',
                hour: 'numeric',
                minute: 'numeric',
                hour12: true
              });%>
            <p class="text-blue-600 text-lg">
                This session is scheduled for <%=formattedDate  %>. to be played at "<%= details.address %>"
                        <% player_list=details.player.split(',').map((memb)=> memb.trim()) %>
            </p>
            <ul class="list-none grid grid-cols-3 gap-4">
                <% for(var i=0; i < player_list.length; i++){ %>
                    <li class="text-blue-600 text-lg px-4 py-3 border-x-4 border-y-2 border-blue-500 ">
                        <%= player_list[i] %>
                    </li>
                    <% } %>

            </ul>
        </div>
    </div>
</body>

</html>